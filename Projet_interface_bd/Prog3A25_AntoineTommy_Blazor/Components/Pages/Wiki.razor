@page "/Wiki"
@using Microsoft.AspNetCore.Components.Authorization
@using Models
@using Services
@inject WikiService wikiService
@rendermode InteractiveServer
@inject AuthenticationStateProvider authStateProvider

<div class="container mt-5">
    <h1 class="mb-4">Wiki</h1>

    <!-- FILTRES NUMÉRIQUES -->
    <div class="row mb-3">
        <div class="col-md-4">
            <label class="form-label">Température :</label>
            <InputNumber class="form-control" @bind-Value="wikiFiltre.Temperature" min="-99" max="99" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Humidité :</label>
            <InputNumber class="form-control" @bind-Value="wikiFiltre.Humidite" min="0" max="99" />
        </div>

        <div class="col-md-4">
            <label class="form-label">Rayons UV :</label>
            <InputNumber class="form-control" @bind-Value="wikiFiltre.RayonsUV" min="0" max="99" />
        </div>
    </div>

    <!-- BOUTONS FILTRER + RÉINITIALISER -->
    <div class="d-flex gap-3 mb-4">
        <button class="btn btn-primary" @onclick="AppliquerFiltre">Filtrer</button>
        <button class="btn btn-secondary" @onclick="Reinitialiser">Réinitialiser</button>
    </div>

    <!-- RECHERCHE TEXTE -->
    <input class="form-control mb-4"
           placeholder="Rechercher une plante..."
           value="@rechercheTexte"
           @oninput="OnRechercheChange" />

    <!-- LISTE DES PLANTES -->
    <div class="row">
        @foreach (var wiki in wikisFiltres)
        {
            <div class="col-12 mb-3">
                <div class="card shadow-sm border-0" style="overflow: hidden;">

                    <div class="card-body">

                        <div class="d-flex justify-content-between">
                            <a href="/Wiki/@wiki.NoWiki" class="text-decoration-none text-dark flex-grow-1">

                                <div class="row g-3 align-items-center">

                                    <div class="col-md-2">
                                        @if (!string.IsNullOrEmpty(wiki.ImagePlante))
                                        {
                                            <img src="@wiki.ImagePlante"
                                                 alt="@wiki.Nom"
                                                 class="img-fluid rounded"
                                                 style="width: 100%; aspect-ratio: 1 / 1; object-fit: cover;" />
                                        }
                                        else
                                        {
                                            <div class="bg-light border rounded d-flex align-items-center justify-content-center"
                                                 style="width: 100%; aspect-ratio: 1 / 1; object-fit: cover;">
                                                <span class="text-muted small">Image</span>
                                            </div>
                                        }
                                    </div>


                                    <div class="col-md-10">
                                        <h5 class="card-title fw-bold mb-1">@wiki.Nom</h5>
                                        <p class="card-text text-muted mb-0">
                                            @Tronquer(wiki.Info, 60)
                                        </p>
                                    </div>

                                </div>
                            </a>

                            <AuthorizeView Roles="Administrateur">
                                <Authorized>
                                    <div class="ms-3">
                                        <a href="/EditWiki/@wiki.NoWiki" class="btn btn-primary btn-sm">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                    </div>
                                </Authorized>
                            </AuthorizeView>
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

@code {
    List<Models.Wiki> wikis = new();
    List<Models.Wiki> wikisFiltres = new();
    WikiFiltre wikiFiltre = new();
    string rechercheTexte = "";

    protected override async Task OnInitializedAsync()
    {
        var authState = await ((CustomAuthenticationStateProvider)authStateProvider).GetAuthenticationStateAsync();
        wikis = await wikiService.GetWikis();
        wikisFiltres = wikis;
    }

    private async Task AppliquerFiltre()
    {
        var filtres = await wikiService.Filter(wikiFiltre);

        wikisFiltres = wikiService.Rechercher(filtres, rechercheTexte);

        StateHasChanged();
    }

    private void OnRechercheChange(ChangeEventArgs e)
    {
        rechercheTexte = e.Value?.ToString() ?? "";

        wikisFiltres = wikiService.Rechercher(wikis, rechercheTexte);

        StateHasChanged();
    }

    private string Tronquer(string texte, int max)
    {
        if (string.IsNullOrEmpty(texte)) return "";
        return texte.Length <= max ? texte : texte.Substring(0, max) + "...";
    }


    private void Reinitialiser()
    {
        wikiFiltre = new();
        rechercheTexte = "";
        wikisFiltres = wikis;

        StateHasChanged();
    }
}
